<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="page-wrap">
        <header style="width: 100%;">
            <a id="imageClick">
                <img src="~/Resources/MSPCloud Logojpeg.jpg" @*class="navbarImageStyle"*@ class="center" />
            </a>
        </header>

        <ul id="menu">
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("MSPCloud Services", "MSPCloudServices", "Home")</li>
            <li>@Html.ActionLink("Partner Services", "PartnerServices", "Home")</li>
            <li>@Html.ActionLink("Contact Us", "Contact", "Contact")</li>
            <li>@Html.ActionLink("Careers", "Careers", "Home")</li>
        </ul>


        @RenderBody()
    </div>
    @*style="position: fixed; bottom: 0; background-color: #7cb3cd; width: 100%; height: 150px;"*@
    <footer class="site-footer">
        <ul id="footerText">
            <li style="float: left; text-align: left;">
                Contact us for a solution that fits your budget and unique requirements. 
                <br />
                Back to Contact Us Page
            </li>
            <li style="float: right;text-align: right">
                SOS Support<br/>
                Remote support download page http://sos.splashtop.com/
            </li>
        </ul>
         <p style="text-align: center;">&copy; @DateTime.Now.Year - MSPCloud</p>
    </footer>

</body>
</html>

<script type="text/javascript">
    var sendEmailUrl = '@Url.Action("SendEmail", "Contact")';
    $("#imageClick").on("click",
        function () {
            var redirectUrl = '@Url.Action("Index", "Home")';
            $.redirect(redirectUrl);

        });
</script>
