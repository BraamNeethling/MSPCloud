@using MSPCloudSite.Models
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <div id="banner" class="container"><img src="~/Resources/cloud-computing-1989339.jpg" width="60%" height="20%" alt="" /></div>
    <div id="welcome" class="container">
        <div class="title">
            <h2>About Us</h2>
        </div>
        <p>
            MSPCloud is a unique managed support provider whether your ICT environment is on-prem, in the cloud or a hybrid solution.
            MSPCloud focuses on being the best managed support provider while still offering all the additional ICT services required to run your business successfully.
            MSPCloud partners with leading ICT companies across the globe to ensure an ICT solution that fits your needs.
            MSPCloud will provide you with comprehensive IT support giving you the freedom to focus on your business goals.
        </p>
    </div>
    <div id="five-column" class="container" style="position: relative">
        <div class="title">
            <h2 style="text-align: center;">Partner Services</h2>
        </div>
        <div id="tbox1" style="text-align: center">
            <div class="title">
                <h3>Connectivity</h3>
            </div>
            <p>
                FTTH & FTTB
            </p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
        <div id="tbox2" style="text-align: center">
            <div class="title">
                <h3>Telephony</h3>
            </div>
            <p>Hosted PABX Solutions</p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
        <div id="tbox3" style="text-align: center">
            <div class="title">
                <h3>Cloud Solutions</h3>
            </div>
            <p>Microsoft</p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
        <div id="tbox4" style="text-align: center">
            <div class="title">
                <h3>Security</h3>
            </div>
            <p>
                Firewall<br>
                Endpoint Security<br>
                Email Security & Continuity.
            </p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
        <div id="tbox5" style="text-align: center">
            <div class="title">
                <h3>Backup Solutions</h3>
            </div>
            <p>
                Online Backup<br>
                Onsite Backup Solutions
            </p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
        <div id="tbox6" style="text-align: center">
            <div class="title">
                <h3>Web Design</h3>
            </div>
            <p>
                Abraham Neethling<br>
                Dyran Antonizzi<br>
                Kyle Farr
            </p>
            @*<a href="#" class="button">Learn More</a>*@
        </div>
    </div>
    <div id="portfolio" class="container">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" style="text-decoration: none;">
                    <div class="panel-heading">
                        <div class="title">
                            <h2>
                                Contact Us
                            </h2>
                        </div>
                    </div>
                </a>
                <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @Html.Partial("_contactView")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
